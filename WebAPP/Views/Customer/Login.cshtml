@model WebAPP.Models.Customers
@{
    ViewBag.Title = "Member Login";
}



<div class="row">
    <div class="col text-center">
        <br />
        <img class="img-fluid text-center" src="~/Content/Images/login.jpg" />
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-8">

        @using (Html.BeginForm("Login", "Customer", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="text-danger">
                        @ViewBag.Message
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-primary" />
                </div>
            </div>
            <p>
                @Html.ActionLink("Register as a new user", "Register", "Customer")
            </p>
        }

    </div>

</div>
